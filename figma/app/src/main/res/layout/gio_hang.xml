<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="390dp"
	android:layout_height="wrap_content"
	tools:context=".giohang">


		<RelativeLayout
			android:id="@+id/content_container"
			android:layout_width="390dp"
			android:layout_height="match_parent">


			<RelativeLayout
				android:id="@+id/page_main_char_ek1"
				android:layout_width="390dp"
				android:layout_height="match_parent"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp">


				<View
					android:id="@+id/_bg__main_char_ek2"
					android:layout_width="390dp"
					android:layout_height="900dp"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:background="@drawable/_bg__main_char_ek2_shape" />

				<View
					android:id="@+id/back"
					android:layout_width="20dp"
					android:layout_height="35dp"
					android:layout_marginStart="10dp"
					android:layout_marginTop="10dp"
					android:background="@drawable/arrow_forward_ios"

					/>
				<TextView
					android:layout_width="150dp"
					android:layout_height="30dp"
					android:text="Giỏ Hàng"
					android:textSize="25dp"
					android:textColor="@color/white"
					android:layout_marginStart="50dp"
					android:layout_marginTop="10dp"
					/>

				<View
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="155dp"
					android:background="@drawable/plus_vt"
					/>

				<View
					android:id="@+id/cat_gh"
					android:layout_width="110dp"
					android:layout_height="150dp"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:layout_marginLeft="60dp"
					android:layout_marginTop="100dp"
					android:background="@drawable/dacnhantamfull"
					/>
				<TextView
					android:layout_width="190dp"
					android:layout_height="40dp"
					android:layout_marginLeft="180dp"
					android:layout_marginTop="115dp"
					android:text="Đắc Nhân Tâm"
					android:textSize="24dp"
					android:textColor="@color/white"/>
				<TextView
					android:layout_width="100dp"
					android:layout_height="40dp"
					android:layout_marginLeft="180dp"
					android:layout_marginTop="168dp"
					android:text="78.000 Đ"
					android:textSize="18dp"
					android:textColor="@color/white"/>
				<RelativeLayout
					android:layout_width="110dp"
					android:layout_height="40dp"
					android:layout_marginLeft="180dp"
					android:layout_marginTop="210dp"
					>
					<View
						android:id="@+id/remove"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:background="@drawable/remove_24"
						android:layout_marginTop="7dp"
						/>
					<TextView
						android:id="@+id/minusplus"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:text="1"
						android:layout_marginTop="5dp"
						android:layout_marginStart="38dp"
						android:textSize="20dp"
						android:textColor="@color/white"/>
					<View
						android:id="@+id/add"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:background="@drawable/add_24"
						android:layout_marginTop="7dp"
						android:layout_marginStart="60dp"
						/>

				</RelativeLayout>

				<Button
					android:id="@+id/thanh_toan"
					android:layout_width="200dp"
					android:layout_height="60dp"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="220dp"
					android:layout_marginBottom="1dp"
					android:text="Thanh Toán"
					android:background="@color/rectangle_2_color"

					/>

				<TextView
					android:layout_width="190dp"
					android:layout_height="40dp"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="50dp"
					android:text="Tổng Tiền Hàng: 0 Đ"
					android:textSize="18dp"
					android:textColor="@color/white"/>
			</RelativeLayout>
		</RelativeLayout>

</HorizontalScrollView>